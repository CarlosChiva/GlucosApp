<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.stadisticsViewsFragments.StadisticResultFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:textAlignment="center">

            <TextView
                android:id="@+id/labelGlucPromMañana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Glucosa promedio en la mañana:" />

            <TextView
                android:id="@+id/valGlucPromMañ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

              <TextView
                android:id="@+id/labelInsulinaLenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insulina lenta registrada: " />

            <TextView
                android:id="@+id/valInsulRegistrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/labelDosisRecomendada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dosis recomendada: " />

            <TextView
                android:id="@+id/valdosisLenRecomendada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/labelRatioInsulRapida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ratio de Insulina Rapida" />

            <TextView
                android:id="@+id/ratioInsulRapida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/labelInsulRapidaRecomendada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insulina Rapida recomendada" />

            <TextView
                android:id="@+id/insulRapidaRecomendada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>