<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.Firebase.BuyFragment">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="What do you Want?"
    android:textAlignment="center"
    android:textSize="20dp"
    android:fontFamily="@font/madjoe"
    android:layout_marginTop="30dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        android:elevation="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/lector"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Lector Glucosa"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:paddingTop="40dp"/>

            <ImageButton
                android:id="@+id/minusButtonLect"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_remove_24"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/numLector"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingTop="17dp"
                android:text="0"
                android:textAlignment="center"
                android:layout_gravity="center"/>
            <ImageButton
                android:id="@+id/plusButtonLact"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_add_24"
                android:background="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:elevation="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/aplicador"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Aplicador"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:paddingTop="40dp"/>

            <ImageButton
                android:id="@+id/minusButtonAplic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_remove_24"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/numAplic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingTop="17dp"
                android:text="0"
                android:textAlignment="center"
                android:layout_gravity="center"/>
            <ImageButton
                android:id="@+id/plusButtonAplic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_add_24"
                android:background="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:elevation="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/full_pack"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Full Pack"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:paddingTop="40dp"/>

            <ImageButton
                android:id="@+id/minusButtonFPack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_remove_24"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/numFPack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingTop="17dp"
                android:text="0"
                android:textAlignment="center"
                android:layout_gravity="center"/>
            <ImageButton
                android:id="@+id/plusButtonFPack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_add_24"
                android:background="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textAlignment="center"
        android:textSize="20dp"
        android:fontFamily="@font/madjoe"/>
    <TextView
        android:id="@+id/totalBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textSize="20dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_done_24"
        android:layout_marginStart="180dp"
        android:layout_marginTop="15dp"/>

</LinearLayout>