<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainFragment">

    <fragment
        android:id="@+id/MainFragment"
        android:name="com.example.tfg.MainFragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_MainFragment_to_ConfigurationFragment"
            app:destination="@id/ConfigurationFragment" />
        <action
            android:id="@+id/action_MainFragment_to_HistoricalFragment"
            app:destination="@id/historicalFragment" />
        <action
            android:id="@+id/action_MainFragment_to_stadisticsFragment"
            app:destination="@id/stadisticsFragment" />
    </fragment>
    <fragment
        android:id="@+id/ConfigurationFragment"
        android:name="com.example.tfg.ConfigurationFragment"
        tools:layout="@layout/fragment_configuration">

        <action
            android:id="@+id/action_ConfigurationFragment_to_MainFragment"
            app:destination="@id/MainFragment" />
    </fragment>
    <fragment
        android:id="@+id/historicalFragment"
        android:name="com.example.tfg.HistoricalFragment"
        android:label="@null"
        tools:layout="@layout/fragment_historical" >
        <action
            android:id="@+id/action_historicalFragment_to_stadisticsFragment"
            app:destination="@id/stadisticsFragment" />
        <action
            android:id="@+id/action_historicalFragment_to_ConfigurationFragment"
            app:destination="@id/ConfigurationFragment" />
    </fragment>
    <action
        android:id="@+id/action_HistoricalFragment_to_MainFragment"
        app:destination="@id/MainFragment" />
    <action
        android:id="@+id/action_HistoricalFragment_to_ConfigurationFragment"
        app:destination="@id/ConfigurationFragment" />
    <fragment
        android:id="@+id/stadisticsFragment"
        android:name="com.example.tfg.StadisticsFragment"
        android:label="fragment_stadistics"
        tools:layout="@layout/fragment_stadistics" >
        <action
            android:id="@+id/action_stadisticsFragment_to_historicalFragment"
            app:destination="@id/historicalFragment" />
        <action
            android:id="@+id/action_stadisticsFragment_to_ConfigurationFragment"
            app:destination="@id/ConfigurationFragment" />
    </fragment>
</navigation>